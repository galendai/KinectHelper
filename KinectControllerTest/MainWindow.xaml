<Window x:Class="KinectControllerTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"              
        Title="MainWindow" Height="735" Width="770" 
        Loaded="Window_Loaded" 
        Closing="Window_Closing">
    <Grid Name="layoutGrid" Margin="10 0 10 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>        
        <StackPanel HorizontalAlignment="Left" Height="Auto" Margin="10,10,0,0" Grid.Row="1" 
                    VerticalAlignment="Top">
            <TextBlock x:Name="LeftHandInfo" FontSize="28"/>
            <TextBlock x:Name="RightHandInfo" FontSize="28"/>
            <TextBlock x:Name="GestureName" FontSize="56" Foreground="Red"/>
        </StackPanel>
    </Grid>
</Window>
